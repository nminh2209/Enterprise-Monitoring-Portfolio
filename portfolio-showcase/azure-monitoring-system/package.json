{
  "name": "azure-monitoring-system",
  "version": "1.0.0",
  "description": "Enterprise-grade monitoring integration with Azure Application Insights for React applications",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "ci": "pnpm type-check && pnpm lint && pnpm test:coverage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@microsoft/applicationinsights-web": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "azure",
    "application-insights",
    "monitoring",
    "telemetry",
    "react",
    "typescript",
    "enterprise"
  ],
  "author": "Your Name",
  "license": "MIT"
}
